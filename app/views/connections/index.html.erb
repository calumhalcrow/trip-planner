<h1>Listing connections</h1>

<table>
  <tr>
    <th>From</th>
    <th>To</th>
    <th>Depart at</th>
    <th>Arrive at</th>
    <th>Name</th>
    <th></th>
    <th></th>
    <th></th>
  </tr>

<% @connections.each do |connection| %>
  <tr>
    <td><%= connection.from %></td>
    <td><%= connection.to %></td>
    <td><%= connection.depart_at %></td>
    <td><%= connection.arrive_at %></td>
    <td><%= connection.name %></td>
    <td><%= link_to 'Show', connection %></td>
    <td><%= link_to 'Edit', edit_connection_path(connection) %></td>
    <td><%= link_to 'Destroy', connection, method: :delete, data: { confirm: 'Are you sure?' } %></td>
  </tr>
<% end %>
</table>

